<?xml version="1.0" encoding="UTF-8"?>
<schema>
  <!-- Resource Name -->
  <foo_mongo>
    <!-- Entity Name -->
    <bar>
      <database>default</database><!-- optional -->
      <collection>foobar</collection>
      <identifier>id</identifier><!-- optional -->
      <fields>
        <id>           <type>int</type></id>
        <address>      <model>foo/address</model><type>reference</type></address>
        <email>        <type>string</type></email>
        <password>     <type>mongo/type_encrypted</type></password>
        <status>       <type>enum</type>
                         <options>
                           <inactive/>
                           <pending/>
                           <active/>
                           <suspended/>
                         </options>
                       </status>
        <active>       <type>bool</type></active>
        <roles>        <type>set</type><subtype>string</subtype></roles>
      </fields>
    </bar>
  </foo_mongo>
</schema>
